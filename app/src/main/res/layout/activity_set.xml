<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_set"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="studio.aier.ishc.gdzc.SetActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="77dp">
            <TextView
                android:text="单位名称："
                android:textSize="27dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/set_txvCompany"
                android:layout_weight="3"
                android:gravity="right"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:id="@+id/set_edtCompany"
                android:layout_weight="1"
                android:background="@android:drawable/edit_text" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="77dp">
            <TextView
                android:text="数据库名称："
                android:textSize="27dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/set_txvSQL"
                android:layout_weight="3"
                android:gravity="right"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:id="@+id/set_edtSQL"
                android:layout_weight="1"
                android:background="@android:drawable/edit_text" />

        </LinearLayout>

        <Button
            android:text="测试设置"
            android:textSize="27dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/set_btnTest"
            android:layout_margin="50dp" />

        <Button
        android:text="保存设置"
        android:textSize="27dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/set_btnSave"
        android:layout_margin="50dp" />

        <Button
            android:text="建立数据库"
            android:textSize="27dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/set_btnSQL"
            android:layout_margin="50dp" />
    </LinearLayout>
</RelativeLayout>
